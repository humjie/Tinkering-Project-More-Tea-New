<?xml version="1.0"?>

<robot name="moretea" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:arg name="is_ignition" default="true"/>
  
  <!-- Include Gazebo Parameters -->
  <xacro:include filename="$(find moretea_description)/urdf/moretea_gazebo.xacro"/>

  <!-- ROS 2 Control -->
  <xacro:include filename="$(find moretea_description)/urdf/moretea_ros2_control.xacro"/>

  <!-- Mecanum Wheel Properties -->
  <xacro:include filename="$(find moretea_description)/urdf/mecanum_properties.urdf.xacro"/>


  <link name="base_footprint"/>
  
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0.12" rpy="0 0 0" />
      <mass value="10"/>
      <inertia ixx="2.2124416e-02" ixy="-1.2294101e-04" ixz="3.4938785e-04"
               iyy="2.1193702e-02" iyz="-5.0120904e-05"
               izz="2.0064271e-02" />
    </inertial>
    <visual>
      <origin xyz="0 0 0.12" rpy="3.14159 0 -1.5707963268"/>
      <geometry>
        <mesh filename="package://moretea_description/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="orange"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.12" rpy="3.14159 0 -1.5707963268"/>
      <geometry>
        <mesh filename="package://moretea_description/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link" />
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <link name="wheel_right_link_1">
    <inertial>
      <origin xyz="0 -0.023 0" rpy="0 0 0" />
      <mass value="${wheel_mass}" />
      <inertia ixx="${(2/5) * wheel_mass * (wheel_radius * wheel_radius)}" ixy="0" ixz="0"
               iyy="${(2/5) * wheel_mass * (wheel_radius * wheel_radius)}" iyz="0"
               izz="${(2/5) * wheel_mass * (wheel_radius * wheel_radius)}" />
    </inertial>
    <visual>
      <origin xyz="0.029315 -0.04132 -0.029315" rpy="0 0 1.5707963268"/>
      <geometry>
        <mesh filename="package://moretea_description/meshes/mecanum_wheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin xyz="0 -0.023 0" rpy="1.5707963268 0 0"/>
      <geometry>
        <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
      </geometry>
    </collision>
  </link>

  <joint name="wheel_right_joint_1" type="continuous">
    <origin xyz="0.105 -0.08 0.029315" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="wheel_right_link_1" />
    <axis xyz="0 1 0" />
    <dynamics damping="0.1"/>
  </joint>

  <link name="wheel_right_link_2">
    <inertial>
      <origin xyz="0 -0.023 0" rpy="0 0 0"/>
      <mass value="${wheel_mass}" />
      <inertia ixx="${(2/5) * wheel_mass * (wheel_radius * wheel_radius)}" ixy="0" ixz="0" 
               iyy="${(2/5) * wheel_mass * (wheel_radius * wheel_radius)}" iyz="0" 
               izz="${(2/5) * wheel_mass * (wheel_radius * wheel_radius)}" />
    </inertial>
    <visual>
      <origin xyz="0.029315 -0.04132 -0.029315" rpy="0 0 1.5707963268"/>
      <geometry>
        <mesh filename="package://moretea_description/meshes/mecanum_wheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin xyz="0 -0.023 0" rpy="1.5707963268 0 0"/>
      <geometry>
        <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
      </geometry>
    </collision>
  </link>

  <joint name="wheel_right_joint_2" type="continuous">
    <origin xyz="-0.105 -0.08 0.029315" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="wheel_right_link_2" />
    <axis xyz="0 1 0" />
    <dynamics damping="0.1"/>
  </joint>

  <link name="wheel_left_link_1">
    <inertial>
      <origin xyz="0 0.023 0" rpy="0 0 0" />
      <mass value="${wheel_mass}" />
      <inertia ixx="${(2/5) * wheel_mass * (wheel_radius * wheel_radius)}" ixy="0" ixz="0" 
               iyy="${(2/5) * wheel_mass * (wheel_radius * wheel_radius)}" iyz="0" 
               izz="${(2/5) * wheel_mass * (wheel_radius * wheel_radius)}" />
    </inertial>
    <visual>
      <origin xyz="-0.029315 0.04132 -0.029315" rpy="0 0 -1.5707963268"/>
      <geometry>
        <mesh filename="package://moretea_description/meshes/mecanum_wheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin xyz="0 0.023 0" rpy="1.5707963268 0 0"/>
      <geometry>
        <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
      </geometry>
    </collision>
  </link>

  <joint name="wheel_left_joint_1" type="continuous">
    <origin xyz="0.105 0.08 0.029315" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="wheel_left_link_1" />
    <axis xyz="0 1 0" />
    <dynamics damping="0.1"/>
  </joint>

  <link name="wheel_left_link_2">
    <inertial>
      <origin xyz="0 0.023 0" rpy="0 0 0" />
      <mass value="${wheel_mass}" />
      <inertia ixx="${(2/5) * wheel_mass * (wheel_radius * wheel_radius)}" ixy="0" ixz="0" 
               iyy="${(2/5) * wheel_mass * (wheel_radius * wheel_radius)}" iyz="0" 
               izz="${(2/5) * wheel_mass * (wheel_radius * wheel_radius)}" />
    </inertial>
    <visual>
      <origin xyz="-0.029315 0.04132 -0.029315" rpy="0 0 -1.5707963268"/>
      <geometry>
        <mesh filename="package://moretea_description/meshes/mecanum_wheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin xyz="0 0.023 0" rpy="1.5707963268 0 0"/>
      <geometry>
        <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
      </geometry>
    </collision>
  </link>

  <joint name="wheel_left_joint_2" type="continuous">
    <origin xyz="-0.105 0.08 0.029315" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="wheel_left_link_2" />
    <axis xyz="0 1 0" />
    <dynamics damping="0.1"/>
  </joint>

  <link name="imu_link">
    <inertial>
      <origin xyz="-0.00552433659106688 0.000168210391520346 0.000514000497342681" rpy="0 0 0" />
      <mass value="0.000528415362211671" />
      <inertia ixx="1.46176048428261E-08" ixy="1.40015117949421E-10" ixz="-1.99633872937403E-12"
               iyy="8.59662482954888E-09" iyz="7.52375112767959E-12"
               izz="2.30279421279312E-08" />
    </inertial>
    <visual>
      <origin xyz="-0.0075 -0.01 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://moretea_description/meshes/imu_link.STL" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin xyz="-0.0075 -0.01 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://moretea_description/meshes/imu_link.STL" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>
  
  <joint name="imu_joint" type="fixed">
    <origin xyz="0 0 0.029" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="imu_link" />
    <axis xyz="0 0 0" />
  </joint>

  <material name="blue">
    <color rgba="0 0 1 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="silver">
    <color rgba="0.79 0.82 0.93 1"/>
  </material>
  <material name="dark_grey">
    <color rgba="0.3 0.3 0.3 1"/>
  </material>
  <material name="orange">
  <color rgba="${255/255} ${108/255} ${10/255} 1.0"/>
  </material>

</robot>